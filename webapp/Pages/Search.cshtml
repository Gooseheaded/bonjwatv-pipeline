@page
@model bwkt_webapp.Pages.SearchModel
@using System
@using System.Linq
@using bwkt_webapp.Helpers
@{
    ViewData["Title"] = "Search";
}

<h1>Search Results for "@Model.Query"</h1>

@if (!Model.Videos.Any())
{
    <p>No results found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var v in Model.Videos)
        {
            <div class="col">
                <div class="card h-100 position-relative">
                    <a asp-page="/Watch" asp-route-v="@v.VideoId">
                        <img src="https://img.youtube.com/vi/@v.VideoId/hqdefault.jpg" class="card-img-top" alt="@v.Title" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@v.Title</h5>
                        @if (!string.IsNullOrEmpty(v.Creator))
                        {
                            <h6 class="card-subtitle mb-2 text-muted">By @v.Creator</h6>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div class="d-flex flex-wrap" style="gap: .25rem;">
                                @foreach (var tag in v.Tags ?? Array.Empty<string>())
                                {
                                    var (text, css) = TagBadge.Get(tag);
                                    <span class="badge @css">@text</span>
                                }
                            </div>
                            <small class="text-muted rating-summary" data-video-id="@v.VideoId">
                                ðŸ”´ <span class="rs-red">0</span>
                                &nbsp;ðŸŸ¡ <span class="rs-yellow">0</span>
                                &nbsp;ðŸŸ¢ <span class="rs-green">0</span>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
                    <a class="page-link" asp-page="/Search" asp-route-q="@Model.Query" asp-route-race="@Model.SelectedRace" asp-route-pageNum="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                </li>
                @for (var p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.CurrentPage ? "active" : null)">
                        <a class="page-link" asp-page="/Search" asp-route-q="@Model.Query" asp-route-race="@Model.SelectedRace" asp-route-pageNum="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" asp-page="/Search" asp-route-q="@Model.Query" asp-route-race="@Model.SelectedRace" asp-route-pageNum="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    }
}

@section Scripts {
<script>
  (function() {
    async function loadSummary(el) {
      const vid = el.getAttribute('data-video-id');
      try {
        const res = await fetch(`/ratings/${vid}`);
        if (!res.ok) return;
        const data = await res.json();
        el.querySelector('.rs-red').textContent = data.Red ?? 0;
        el.querySelector('.rs-yellow').textContent = data.Yellow ?? 0;
        el.querySelector('.rs-green').textContent = data.Green ?? 0;
      } catch {}
    }
    document.querySelectorAll('.rating-summary').forEach(loadSummary);
  })();
</script>
}
