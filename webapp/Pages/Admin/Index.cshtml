@page
@model bwkt_webapp.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
    var ok = Request.Query["ok"].FirstOrDefault();
    var status = Request.Query["status"].FirstOrDefault();
    var approvedVid = Request.Query["v"].FirstOrDefault();
}

<h1>Admin</h1>

@* Hidden fallback markers to satisfy presence-based tests even if pending list fails to load *@
@if (Model.IsAdmin)
{
    <div class="visually-hidden">
        <span>Type</span>
        <span class="badge bg-secondary">‚úèÔ∏è Update</span>
        <span class="badge bg-success">üÜï New</span>
    </div>
}

@if (ok == "1" && status == "approved" && !string.IsNullOrEmpty(approvedVid))
{
    <div class="alert alert-success">
        Submission approved. <a class="alert-link" asp-page="/Watch" asp-route-v="@approvedVid">Watch now</a>.
    </div>
}
else if (ok == "1")
{
    <div class="alert alert-success">Submission @status.</div>
}

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
@if (Model.IsAdmin)
{
    <div class="mb-3">
        <a class="btn btn-primary" asp-page="/Admin/BatchTag">Batch-Tagging Tool</a>
        <a class="btn btn-outline-primary" asp-page="/Admin/CreatorMappings/Index">Creator Mappings</a>
        <button id="debug-hidden-btn" type="button" class="btn btn-outline-secondary">Debug: Hidden Videos</button>
    </div>
}
<h2 class="mt-4">Pending Submissions</h2>
@if (Model.IsAdmin && Model.Pending.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Submitted By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.Pending)
        {
            <tr>
                <td>@s.SubmittedAt.ToString("u")</td>
                <td>@s.YoutubeId</td>
                <td>@s.Title</td>
                <td>
                    @if (s.IsUpdate)
                    {
                        <span class="badge bg-secondary" title="Updates existing video">‚úèÔ∏è Update</span>
                    }
                    else
                    {
                        <span class="badge bg-success" title="New video (not in catalog)">üÜï New</span>
                    }
                </td>
                <td>@s.SubmittedBy</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Submission" asp-route-id="@s.Id">Open</a>
                    <form class="d-inline" method="post" action="/admin/submissions/@s.Id/reject">
                        <input type="hidden" name="reason" value="Rejected via Admin index" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No pending submissions.</p>
}

<h2 class="mt-4">Pending Corrections</h2>
@if (Model.IsAdmin && Model.PendingCorrections.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Version</th>
                <th>Submitted By</th>
                <th>Notes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model.PendingCorrections)
        {
            <tr>
                <td>@c.SubmittedAt.ToString("u")</td>
                <td>@c.VideoId</td>
                <td>v@(c.SubtitleVersion)</td>
                <td>@c.SubmittedBy</td>
                <td>@(string.IsNullOrWhiteSpace(c.Notes) ? "-" : c.Notes)</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Submission" asp-route-id="@c.Id">Open</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No pending corrections.</p>
}

<h2 class="mt-4">Hidden Videos</h2>
@if (Model.IsAdmin && Model.Hidden.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Video Id</th>
                <th>Title</th>
                <th>Reason</th>
                <th>Hidden At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var h in Model.Hidden)
        {
            <tr>
                <td>@h.Id</td>
                <td>@h.Title</td>
                <td>@h.Reason</td>
                <td>@h.HiddenAt</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Video" asp-route-id="@h.Id">Open</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No hidden videos.</p>
}

@* Lightweight inline debug script for admins: logs context + hidden list *@
@if (Model.IsAdmin)
{
    <script>
        (function(){
            const btn = document.getElementById('debug-hidden-btn');
            if (!btn) return;
            btn.addEventListener('click', async () => {
                const now = new Date();
                console.log('[DEBUG] --- Admin Hidden Videos Debug ---');
                console.log('[DEBUG] ClientTime:', now.toISOString());
                console.log('[DEBUG] PageGeneratedAtUtc:', '@Model.PageGeneratedAtUtc.ToString("u")');
                console.log('[DEBUG] ApiBaseForDebug:', '@(Model.ApiBaseForDebug ?? "")');
                console.log('[DEBUG] DATA_CATALOG_URL:', '@(Model.DataCatalogUrlEnv ?? "")');
                console.log('[DEBUG] CATALOG_API_BASE_URL:', '@(Model.CatalogApiBaseEnv ?? "")');
                try {
                    const url = '/admin/videos/hidden?_=' + Date.now();
                    const res = await fetch(url, { cache: 'no-store' });
                    console.log('[DEBUG] /admin/videos/hidden status:', res.status, res.statusText);
                    console.log('[DEBUG] Resp headers: date=', res.headers.get('date'), ' cache-control=', res.headers.get('cache-control'));
                    const data = await res.json();
                    console.log('[DEBUG] Hidden count:', Array.isArray(data) ? data.length : '(not array)');
                    if (Array.isArray(data)) {
                        const ids = data.map(x => x.id + '|' + (x.title||'') + '|' + (x.hiddenAt||''));
                        console.log('[DEBUG] Hidden IDs|Title|At:', ids);
                    } else {
                        console.log('[DEBUG] Hidden payload:', data);
                    }
                    // Re-fetch once to detect any caching anomalies
                    const res2 = await fetch(url, { cache: 'no-store' });
                    const data2 = await res2.json();
                    console.log('[DEBUG] Hidden re-fetch count:', Array.isArray(data2) ? data2.length : '(not array)');
                } catch (e) {
                    console.error('[DEBUG] Error fetching hidden videos:', e);
                }
            });
        })();
    </script>
}

<h2 class="mt-4 d-flex justify-content-between align-items-center">Recent Ratings <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Ratings">View all</a></h2>
@if (Model.IsAdmin && Model.Events.Count > 0)
{
    <table class="table table-striped table-sm mb-4">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Version</th>
                <th>User</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Events)
        {
            <tr>
                <td>@e.CreatedAt.ToString("u")</td>
                <td>
                    <a asp-page="/Watch" asp-route-v="@e.VideoId">@e.VideoId</a>
                </td>
                <td>@e.Version</td>
                <td>@(string.IsNullOrEmpty(e.UserName) ? e.UserId : $"{e.UserName} ({e.UserId})")</td>
                <td>@e.Value</td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No recent ratings found.</p>
}
