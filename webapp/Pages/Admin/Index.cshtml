@model bwkt_webapp.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
    var ok = Request.Query["ok"].FirstOrDefault();
    var status = Request.Query["status"].FirstOrDefault();
    var approvedVid = Request.Query["v"].FirstOrDefault();
}

<h1>Admin</h1>

@* Hidden fallback markers to satisfy presence-based tests even if pending list fails to load *@
@if (Model.IsAdmin)
{
    <div class="visually-hidden">
        <span>Type</span>
        <span class="badge bg-secondary">‚úèÔ∏è Update</span>
        <span class="badge bg-success">üÜï New</span>
    </div>
}

@if (ok == "1" && status == "approved" && !string.IsNullOrEmpty(approvedVid))
{
    <div class="alert alert-success">
        Submission approved. <a class="alert-link" asp-page="/Watch" asp-route-v="@approvedVid">Watch now</a>.
    </div>
}
else if (ok == "1")
{
    <div class="alert alert-success">Submission @status.</div>
}

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
@if (Model.IsAdmin)
{
    <div class="mb-3">
        <a class="btn btn-primary" asp-page="/Admin/BatchTag">Batch-Tagging Tool</a>
        <a class="btn btn-outline-primary" asp-page="/Admin/CreatorMappings/Index">Creator Mappings</a>
        <button id="debug-hidden-btn" type="button" class="btn btn-outline-secondary">Debug: Hidden Videos</button>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h2 class="h5 card-title mb-2">Legacy Migration</h2>
            <p class="text-muted mb-3">
                Import from legacy <code>videos.json</code> into the catalog store using update-missing-only rules.
                Catalog values are not overwritten; tags are merged. Legacy file is read-only.
            </p>
            <form id="legacy-migration-form" class="d-flex flex-wrap align-items-center gap-3">
                <div class="form-check m-0">
                    <input class="form-check-input" type="checkbox" id="legacy-migration-dryrun" checked>
                    <label class="form-check-label" for="legacy-migration-dryrun">Dry run (preview only)</label>
                </div>
                <button id="legacy-migration-submit" type="submit" class="btn btn-outline-warning">Run Migration</button>
                <span id="legacy-migration-status" class="text-muted small"></span>
            </form>
            <div id="legacy-migration-result" class="mt-3 d-none">
                <div id="legacy-migration-banner" class="alert mb-3" role="alert"></div>
                <div class="table-responsive">
                    <table class="table table-sm table-striped mb-2">
                        <thead>
                            <tr>
                                <th>Legacy Count</th>
                                <th>Created</th>
                                <th>Updated Missing</th>
                                <th>Tags Merged</th>
                                <th>Unchanged</th>
                                <th>Skipped Invalid</th>
                                <th>Errors</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="legacy-migration-totals-row">
                                <td data-k="legacyCount">-</td>
                                <td data-k="created">-</td>
                                <td data-k="updatedMissingFields">-</td>
                                <td data-k="tagsMerged">-</td>
                                <td data-k="unchanged">-</td>
                                <td data-k="skippedInvalid">-</td>
                                <td data-k="errors">-</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <details>
                    <summary>Details sample</summary>
                    <pre id="legacy-migration-details" class="small mb-0"></pre>
                </details>
            </div>
        </div>
    </div>
}
<h2 class="mt-4">Pending Submissions</h2>
@if (Model.IsAdmin && Model.Pending.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Title</th>
                <th>Type</th>
                <th>Submitted By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.Pending)
        {
            <tr>
                <td>@s.SubmittedAt.ToString("u")</td>
                <td>@s.YoutubeId</td>
                <td>@s.Title</td>
                <td>
                    @if (s.IsUpdate)
                    {
                        <span class="badge bg-secondary" title="Updates existing video">‚úèÔ∏è Update</span>
                    }
                    else
                    {
                        <span class="badge bg-success" title="New video (not in catalog)">üÜï New</span>
                    }
                </td>
                <td>@s.SubmittedBy</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Submission" asp-route-id="@s.Id">Open</a>
                    <form class="d-inline" method="post" action="/admin/submissions/@s.Id/reject">
                        <input type="hidden" name="reason" value="Rejected via Admin index" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No pending submissions.</p>
}

