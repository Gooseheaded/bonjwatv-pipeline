@* Lightweight inline debug script for admins: logs context + hidden list *@
@if (Model.IsAdmin)
{
    <script>
        (function(){
            const migrationForm = document.getElementById('legacy-migration-form');
            const migrationDryRun = document.getElementById('legacy-migration-dryrun');
            const migrationSubmit = document.getElementById('legacy-migration-submit');
            const migrationStatus = document.getElementById('legacy-migration-status');
            const migrationResult = document.getElementById('legacy-migration-result');
            const migrationBanner = document.getElementById('legacy-migration-banner');
            const migrationTotalsRow = document.getElementById('legacy-migration-totals-row');
            const migrationDetails = document.getElementById('legacy-migration-details');

            if (migrationForm) {
                migrationForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const dryRun = !!(migrationDryRun && migrationDryRun.checked);
                    if (!dryRun) {
                        const ok = window.confirm('Run legacy migration with writes enabled? This is idempotent, but it will update the catalog store.');
                        if (!ok) return;
                    }
                    if (migrationSubmit) migrationSubmit.setAttribute('disabled', 'disabled');
                    if (migrationStatus) migrationStatus.textContent = dryRun ? 'Running dry run...' : 'Running migration...';

                    try {
                        const res = await fetch('/admin/migrations/legacy-videos/import', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ dryRun })
                        });
                        const data = await res.json().catch(() => ({}));
                        renderMigrationResult(data, res.ok, dryRun);
                    } catch (err) {
                        renderMigrationResult({ error: 'Network error while running migration.' }, false, dryRun);
                    } finally {
                        if (migrationSubmit) migrationSubmit.removeAttribute('disabled');
                        if (migrationStatus) migrationStatus.textContent = '';
                    }
                });
            }

            function renderMigrationResult(data, ok, dryRun) {
                if (!migrationResult || !migrationBanner) return;
                migrationResult.classList.remove('d-none');
                migrationBanner.classList.remove('alert-success', 'alert-warning', 'alert-danger');
                migrationBanner.classList.add(ok ? (dryRun ? 'alert-warning' : 'alert-success') : 'alert-danger');

                const modeLabel = data && data.dryRun ? 'Dry run' : 'Applied';
                if (ok) {
                    const totals = data && data.totals ? data.totals : {};
                    migrationBanner.textContent = `${modeLabel} completed. Created ${totals.created ?? 0}, updated missing ${totals.updatedMissingFields ?? 0}, tags merged ${totals.tagsMerged ?? 0}.`;
                } else {
                    migrationBanner.textContent = `Migration failed: ${(data && (data.error || data.errorCode)) ? (data.error || data.errorCode) : 'unknown_error'}`;
                }

                if (migrationTotalsRow) {
                    migrationTotalsRow.querySelectorAll('[data-k]').forEach(cell => {
                        const key = cell.getAttribute('data-k');
                        const value = data && data.totals && key ? data.totals[key] : null;
                        cell.textContent = value === null || value === undefined ? '-' : String(value);
                    });
                }

                if (migrationDetails) {
                    const details = data && Array.isArray(data.detailsSample) ? data.detailsSample : [];
                    migrationDetails.textContent = details.length ? JSON.stringify(details, null, 2) : 'No detail sample returned.';
                }
            }

            const btn = document.getElementById('debug-hidden-btn');
            if (!btn) return;
            btn.addEventListener('click', async () => {
                const now = new Date();
                console.log('[DEBUG] --- Admin Hidden Videos Debug ---');
                console.log('[DEBUG] ClientTime:', now.toISOString());
                console.log('[DEBUG] PageGeneratedAtUtc:', '@Model.PageGeneratedAtUtc.ToString("u")');
                console.log('[DEBUG] ApiBaseForDebug:', '@(Model.ApiBaseForDebug ?? "")');
                console.log('[DEBUG] DATA_CATALOG_URL:', '@(Model.DataCatalogUrlEnv ?? "")');
                console.log('[DEBUG] CATALOG_API_BASE_URL:', '@(Model.CatalogApiBaseEnv ?? "")');
                try {
                    const url = '/admin/videos/hidden?_=' + Date.now();
                    const res = await fetch(url, { cache: 'no-store' });
                    console.log('[DEBUG] /admin/videos/hidden status:', res.status, res.statusText);
                    console.log('[DEBUG] Resp headers: date=', res.headers.get('date'), ' cache-control=', res.headers.get('cache-control'));
                    const data = await res.json();
                    console.log('[DEBUG] Hidden count:', Array.isArray(data) ? data.length : '(not array)');
                    if (Array.isArray(data)) {
                        const ids = data.map(x => x.id + '|' + (x.title||'') + '|' + (x.hiddenAt||''));
                        console.log('[DEBUG] Hidden IDs|Title|At:', ids);
                    } else {
                        console.log('[DEBUG] Hidden payload:', data);
                    }
                    // Re-fetch once to detect any caching anomalies
                    const res2 = await fetch(url, { cache: 'no-store' });
                    const data2 = await res2.json();
                    console.log('[DEBUG] Hidden re-fetch count:', Array.isArray(data2) ? data2.length : '(not array)');
                } catch (e) {
                    console.error('[DEBUG] Error fetching hidden videos:', e);
                }
            });
        })();
    </script>
}

<h2 class="mt-4 d-flex justify-content-between align-items-center">Recent Ratings <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Ratings">View all</a></h2>
