@model bwkt_webapp.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin â€” Recent Ratings";
}

<h1>Recent Ratings</h1>

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
else if (Model.Events.Count == 0)
{
    <p>No recent ratings found.</p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Version</th>
                <th>User</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Events)
        {
            <tr>
                <td>@e.CreatedAt.ToString("u")</td>
                <td>@e.VideoId</td>
                <td>@e.Version</td>
                <td>@(string.IsNullOrEmpty(e.UserName) ? e.UserId : $"{e.UserName} ({e.UserId})")</td>
                <td>@e.Value</td>
            </tr>
        }
        </tbody>
    </table>
}

