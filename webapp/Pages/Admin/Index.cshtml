@page
@model bwkt_webapp.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
    var ok = Request.Query["ok"].FirstOrDefault();
    var status = Request.Query["status"].FirstOrDefault();
    var approvedVid = Request.Query["v"].FirstOrDefault();
}

<h1>Admin</h1>

@if (ok == "1" && status == "approved" && !string.IsNullOrEmpty(approvedVid))
{
    <div class="alert alert-success">
        Submission approved. <a class="alert-link" asp-page="/Watch" asp-route-v="@approvedVid">Watch now</a>.
    </div>
}
else if (ok == "1")
{
    <div class="alert alert-success">Submission @status.</div>
}

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
@if (Model.IsAdmin)
{
    <div class="mb-3">
        <a class="btn btn-primary" asp-page="/Admin/BatchTag">Batch-Tagging Tool</a>
    </div>
}
<h2 class="mt-4 d-flex justify-content-between align-items-center">Recent Ratings <a class="btn btn-sm btn-outline-secondary" asp-page="/Admin/Ratings">View all</a></h2>
@if (Model.IsAdmin && Model.Events.Count > 0)
{
    <table class="table table-striped table-sm mb-4">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Version</th>
                <th>User</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Events)
        {
            <tr>
                <td>@e.CreatedAt.ToString("u")</td>
                <td>
                    <a asp-page="/Watch" asp-route-v="@e.VideoId">@e.VideoId</a>
                </td>
                <td>@e.Version</td>
                <td>@(string.IsNullOrEmpty(e.UserName) ? e.UserId : $"{e.UserName} ({e.UserId})")</td>
                <td>@e.Value</td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No recent ratings found.</p>
}

<h2 class="mt-4">Pending Submissions</h2>
@if (Model.IsAdmin && Model.Pending.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Title</th>
                <th>Submitted By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.Pending)
        {
            <tr>
                <td>@s.SubmittedAt.ToString("u")</td>
                <td>@s.YoutubeId</td>
                <td>@s.Title</td>
                <td>@s.SubmittedBy</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Submission" asp-route-id="@s.Id">Open</a>
                    <form class="d-inline" method="post" action="/admin/submissions/@s.Id/reject">
                        <input type="hidden" name="reason" value="Rejected via Admin index" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<h2 class="mt-4">Hidden Videos</h2>
@if (Model.IsAdmin && Model.Hidden.Count > 0)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Video Id</th>
                <th>Title</th>
                <th>Reason</th>
                <th>Hidden At</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var h in Model.Hidden)
        {
            <tr>
                <td>@h.Id</td>
                <td>@h.Title</td>
                <td>@h.Reason</td>
                <td>@h.HiddenAt</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-page="/Admin/Video" asp-route-id="@h.Id">Open</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else if (Model.IsAdmin)
{
    <p>No hidden videos.</p>
}
else if (Model.IsAdmin)
{
    <p>No pending submissions.</p>
}
