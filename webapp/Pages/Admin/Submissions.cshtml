@page
@model bwkt_webapp.Pages.Admin.SubmissionsModel
@{
    ViewData["Title"] = "Admin â€” Submissions";
}

<h1>Pending Submissions</h1>

@{
    var ok = Request.Query["ok"].FirstOrDefault();
    var status = Request.Query["status"].FirstOrDefault();
}
@if (ok == "1")
{
    <div class="alert alert-success">Submission @status.</div>
}

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
else if (Model.Items.Count == 0)
{
    <p>No pending submissions.</p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>When (UTC)</th>
                <th>Video Id</th>
                <th>Title</th>
                <th>Submitted By</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in Model.Items)
        {
            <tr>
                <td>@s.SubmittedAt.ToString("u")</td>
                <td>@s.YoutubeId</td>
                <td>@s.Title</td>
                <td>@s.SubmittedBy</td>
                <td class="text-nowrap">
                    <form class="d-inline" method="post" action="/admin/submissions/@s.Id/approve">
                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                    </form>
                    <form class="d-inline" method="post" action="/admin/submissions/@s.Id/reject">
                        <input type="hidden" name="reason" value="Rejected via UI" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
