@page
@model bwkt_webapp.Pages.Admin.RatingsModel
@{
    ViewData["Title"] = "Admin — Ratings";
}

<h1>Admin — Ratings</h1>

@if (!Model.IsAdmin)
{
    <div class="alert alert-warning">You do not have access to this page.</div>
}
else
{
    <form method="get" class="row g-2 align-items-end mb-3">
        <div class="col-auto">
            <label for="pageSize" class="form-label">Page size</label>
            <input type="number" class="form-control" id="pageSize" name="pageSize" value="@Model.PageSize" min="10" max="200" step="10">
        </div>
        <div class="col-auto">
            <label class="form-label d-block">&nbsp;</label>
            <button class="btn btn-primary" type="submit">Apply</button>
            <a class="btn btn-link" asp-page="/Admin/Index">Back to Admin</a>
        </div>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <strong>Total:</strong> @Model.TotalCount
        </div>
        <div class="btn-group" role="group" aria-label="Pager">
            <a class="btn btn-sm btn-outline-secondary @(Model.PageNumber <= 1 ? "disabled" : "")" asp-page="/Admin/Ratings" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Prev</a>
            <span class="btn btn-sm btn-outline-secondary disabled">Page @Model.PageNumber</span>
            <a class="btn btn-sm btn-outline-secondary @(Model.PageNumber * Model.PageSize >= Model.TotalCount ? "disabled" : "")" asp-page="/Admin/Ratings" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
        </div>
    </div>

    @if (Model.Paged.Count == 0)
    {
        <p>No ratings found.</p>
    }
    else
    {
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>When (UTC)</th>
                    <th>Video Id</th>
                    <th>Version</th>
                    <th>User</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var e in Model.Paged)
            {
                <tr>
                    <td>@e.CreatedAt.ToString("u")</td>
                    <td>
                        <a asp-page="/Admin/Video" asp-route-id="@e.VideoId">@e.VideoId</a>
                    </td>
                    <td>@e.Version</td>
                    <td>@(string.IsNullOrEmpty(e.UserName) ? e.UserId : $"{e.UserName} ({e.UserId})")</td>
                    <td>@e.Value</td>
                </tr>
            }
            </tbody>
        </table>
    }
}
