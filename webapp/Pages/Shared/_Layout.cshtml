<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bonjwa.tv</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bwkt_webapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-body-tertiary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">bonjwa.tv</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.patreon.com/bwkt" target="_blank" rel="noopener">Patreon</a>
                        </li>
                    </ul>
                    @{ var raceVal = (string)(Context.Request.Query["race"].FirstOrDefault() ?? Context.Request.Cookies["race"] ?? "all"); }
                    <form class="d-flex" method="get" asp-page="/Search">
                        <select class="form-select me-2" name="race" aria-label="Race filter">
@if (string.Equals(raceVal, "all", StringComparison.OrdinalIgnoreCase)) {
    <option value="all" selected>All Races</option>
} else {
    <option value="all">All Races</option>
}
@if (string.Equals(raceVal, "z", StringComparison.OrdinalIgnoreCase)) {
    <option value="z" selected>Zerg</option>
} else {
    <option value="z">Zerg</option>
}
@if (string.Equals(raceVal, "t", StringComparison.OrdinalIgnoreCase)) {
    <option value="t" selected>Terran</option>
} else {
    <option value="t">Terran</option>
}
@if (string.Equals(raceVal, "p", StringComparison.OrdinalIgnoreCase)) {
    <option value="p" selected>Protoss</option>
} else {
    <option value="p">Protoss</option>
}
                        </select>
                        <input class="form-control me-2" type="search" name="q" placeholder="Search" aria-label="Search" value="@Context.Request.Query["q"]" />
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <!-- <span class="navbar-text ms-2">Hello, @User.Identity!.Name</span> -->
                        <form class="d-inline ms-2" method="post" action="/account/logout">
                            <button class="btn btn-outline-primary" type="submit">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-primary ms-2" asp-area="" asp-page="/Account/Login">Login</a>
                    }
                    <button id="theme-toggle" type="button" class="btn btn-outline-secondary ms-2" aria-label="Toggle light/dark theme">
                        <span id="theme-icon">🌙</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - bonjwa.tv
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
