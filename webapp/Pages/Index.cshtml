@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@{
    var __adminIds = Environment.GetEnvironmentVariable("ADMIN_USER_IDS") ?? string.Empty;
    var __currentId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
    var __isAdmin = !string.IsNullOrWhiteSpace(__adminIds) && !string.IsNullOrWhiteSpace(__currentId) && __adminIds.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).Contains(__currentId);
    var __adminIdsJson = System.Text.Json.JsonSerializer.Serialize(__adminIds);
    var __currentIdJson = System.Text.Json.JsonSerializer.Serialize(__currentId);
    var __isAdminJs = __isAdmin ? "true" : "false";
}
@section Scripts {
<script>
  console.log('ADMIN_USER_IDS:', @Html.Raw(__adminIdsJson));
  console.log('CurrentUserId:', @Html.Raw(__currentIdJson));
  console.log('IsAdmin:', @Html.Raw(__isAdminJs));
  if (!@Html.Raw(__isAdminJs)) {
    console.log('Tip: Add your Discord user id to ADMIN_USER_IDS (comma-separated) and rebuild to enable Admin link.');
  }
</script>
}

@using System
@using System.Linq
@using bwkt_webapp.Helpers

<div class="alert alert-info text-center" role="alert">
    Welcome to bonjwa.tv, the subtitled Brood War video gallery. Consider supporting via
    <a href="https://www.patreon.com/bwkt" class="alert-link" target="_blank" rel="noopener">Patreon</a>!
</div>
<h1>All Videos</h1>

@if (!Model.Videos.Any())
{
    <p>No videos available.</p>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var v in Model.Videos)
        {
            <div class="col">
                <div class="card h-100">
                    <a asp-page="/Watch" asp-route-v="@v.VideoId">
                        <img src="https://img.youtube.com/vi/@v.VideoId/hqdefault.jpg"
                             class="card-img-top" alt="@v.Title" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@v.Title</h5>
                        @if (!string.IsNullOrEmpty(v.Creator))
                        {
                            <h6 class="card-subtitle mb-2 text-muted">By @v.Creator</h6>
                        }
                        @foreach (var tag in v.Tags ?? Array.Empty<string>())
                        {
                            var (text, css) = TagBadge.Get(tag);
                            <span class="badge @css me-1">@text</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : null)">
                    <a class="page-link" asp-page="/Index" asp-route-pageNum="@(Model.CurrentPage - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
                </li>
                @for (var p = 1; p <= Model.TotalPages; p++)
                {
                    <li class="page-item @(p == Model.CurrentPage ? "active" : null)">
                        <a class="page-link" asp-page="/Index" asp-route-pageNum="@p" asp-route-pageSize="@Model.PageSize">@p</a>
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : null)">
                    <a class="page-link" asp-page="/Index" asp-route-pageNum="@(Model.CurrentPage + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
                </li>
            </ul>
        </nav>
    }
}
